---
layout: default
---
{% assign author = site.data.authors[page.author] %}

<article class="post {{ page.class }}">
	<header><h1>{{ page.title }}</h1></header>
	<div class="content">
		{{ content }}
	</div>
	<footer>
		<div><time>{{ page.date | date: "%F" }}</time></div>
		<div>分类：
			{% for category in page.categories %}
				<a rel="category tag" href="{{ site.baseurl }}/category/{{ category | slugify }}">
					{{ category }}</a>{% unless ffooterorloop.last %},{% endunless %}
			{% endfor %}
			{% if page.categories == empty %} Uncategorized {% endif %}
		</div>
		<div>标签：
			{% for tag in page.tags %}
				<a rel="tag" href="{{ site.baseurl }}/tag/{{ tag | slugify }}">
					{{ tag }}</a>{% unless forloop.last %},{% endunless %}
			{% endfor %}
		</div>
	</footer>
</article>
<nav>
	{% if page.previous %}
		<a class="linear" rel="prev" href="{{ site.baseurl }}{{ page.previous.url }}">
			<header>上一篇Previous</header>
			{{ page.previous.title }}
		</a>
	{% endif %}
	{% if page.next %}
		<a class="linear" rel="prev" href="{{ site.baseurl }}{{ page.next.url }}">
			<header>下一篇Next</header>
			{{ page.next.title }}
		</a>
	{% endif %}
</nav>
